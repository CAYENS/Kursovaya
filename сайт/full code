script.js:
    document.addEventListener('DOMContentLoaded', function () {
        // –ü–æ–ª—É—á–∞–µ–º —ç–ª–µ–º–µ–Ω—Ç —Å –ª–æ–≥–æ—Ç–∏–ø–æ–º
        const logo = document.querySelector('.logo img');

        // –°–æ—Ö—Ä–∞–Ω—è–µ–º –ø—É—Ç—å –∫ –∏–∑–æ–±—Ä–∞–∂–µ–Ω–∏—é –∏ –∏–∑–æ–±—Ä–∞–∂–µ–Ω–∏–µ –ø—Ä–∏ –Ω–∞–≤–µ–¥–µ–Ω–∏–∏
        const originalSrc = logo.src;
        const hoverSrc = logo.getAttribute('data-hover');

        // –î–æ–±–∞–≤–ª—è–µ–º –æ–±—Ä–∞–±–æ—Ç—á–∏–∫–∏ —Å–æ–±—ã—Ç–∏–π –¥–ª—è –∏–∑–º–µ–Ω–µ–Ω–∏—è –∏–∑–æ–±—Ä–∞–∂–µ–Ω–∏—è –ø—Ä–∏ –Ω–∞–≤–µ–¥–µ–Ω–∏–∏ –∏ –æ—Ç–≤–µ–¥–µ–Ω–∏–∏
        logo.addEventListener('mouseover', () => {
            logo.src = hoverSrc;
        });

        logo.addEventListener('mouseout', () => {
            logo.src = originalSrc;
        });

        const scrollIndicator = document.querySelector('.scroll-indicator');

        // –û–±—Ä–∞–±–æ—Ç—á–∏–∫ —Å–æ–±—ã—Ç–∏—è –ø—Ä–∏ –ø—Ä–æ–∫—Ä—É—Ç–∫–µ –∫–æ–ª–µ—Å–∞ –º—ã—à–∏
        window.addEventListener('wheel', function (event) {
            // –ï—Å–ª–∏ –ø—Ä–æ–∫—Ä—É—Ç–∫–∞ –≤–Ω–∏–∑
            if (event.deltaY > 0) {
                // –°–∫—Ä—ã–≤–∞–µ–º —Å—Ç—Ä–µ–ª–æ—á–∫—É
                scrollIndicator.style.opacity = 0;
            } else {
                // –ü–æ–∫–∞–∑—ã–≤–∞–µ–º —Å—Ç—Ä–µ–ª–æ—á–∫—É
                scrollIndicator.style.opacity = 1;
            }
        });

        // –û–±—Ä–∞–±–æ—Ç—á–∏–∫ —Å–æ–±—ã—Ç–∏—è –ø—Ä–∏ –∫–ª–∏–∫–µ –Ω–∞ —Å—Ç—Ä–µ–ª–æ—á–∫—É
        scrollIndicator.addEventListener('click', function () {
            // –ü–æ–ª—É—á–∞–µ–º —Ç–µ–∫—É—â–µ–µ –ø–æ–ª–æ–∂–µ–Ω–∏–µ –æ–∫–Ω–∞ –ø—Ä–æ—Å–º–æ—Ç—Ä–∞
            const currentScroll = window.scrollY;

            // –í—ã—á–∏—Å–ª—è–µ–º –≤—ã—Å–æ—Ç—É –æ–∫–Ω–∞ –ø—Ä–æ—Å–º–æ—Ç—Ä–∞
            const windowHeight = window.innerHeight;

            // –ï—Å–ª–∏ –º—ã –µ—â–µ –Ω–µ –¥–æ—Å—Ç–∏–≥–ª–∏ –ø–æ–¥–≤–∞–ª–∞, –ø—Ä–æ–∫—Ä—É—á–∏–≤–∞–µ–º –≤–Ω–∏–∑
            if (currentScroll + windowHeight < document.body.clientHeight) {
                window.scrollTo({
                    top: currentScroll + windowHeight,
                    behavior: 'smooth',
                });
            } else {
                // –ï—Å–ª–∏ –¥–æ—Å—Ç–∏–≥–ª–∏ –ø–æ–¥–≤–∞–ª–∞, –ø—Ä–æ–∫—Ä—É—á–∏–≤–∞–µ–º –≤–≤–µ—Ä—Ö
                window.scrollTo({
                    top: 0,
                    behavior: 'smooth',
                });
            }
        });

        // –°–µ–∫—Ü–∏—è –≤—Ç–æ—Ä–æ–≥–æ –±–ª–æ–∫–∞
        const secondSection = document.querySelector('.second-section');

        // –ü–æ–ª—É—á–∞–µ–º –≤—Å–µ –±–ª–æ–∫–∏ –≤—Ç–æ—Ä–æ–π —Å–µ–∫—Ü–∏–∏
        const blocks = document.querySelectorAll('.second-section .block');

        // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∏—Ä—É–µ–º ScrollReveal
        ScrollReveal().reveal(blocks, {
            delay: 200, // –ó–∞–¥–µ—Ä–∂–∫–∞ –ø–µ—Ä–µ–¥ –ø–æ—è–≤–ª–µ–Ω–∏–µ–º –∫–∞–∂–¥–æ–≥–æ –±–ª–æ–∫–∞
            distance: '50px', // –†–∞—Å—Å—Ç–æ—è–Ω–∏–µ, –Ω–∞ –∫–æ—Ç–æ—Ä–æ–µ –ø—Ä–æ–∏—Å—Ö–æ–¥–∏—Ç —Å–º–µ—â–µ–Ω–∏–µ –±–ª–æ–∫–∞
            origin: 'bottom', // –ù–∞–ø—Ä–∞–≤–ª–µ–Ω–∏–µ, –∏–∑ –∫–æ—Ç–æ—Ä–æ–≥–æ –ø—Ä–æ–∏—Å—Ö–æ–¥–∏—Ç –∞–Ω–∏–º–∞—Ü–∏—è
            easing: 'cubic-bezier(0.5, 0, 0, 1)', // –§—É–Ω–∫—Ü–∏—è –∞–Ω–∏–º–∞—Ü–∏–∏
            reset: true, // –ê–Ω–∏–º–∞—Ü–∏—è –±—É–¥–µ—Ç —Å–±—Ä–æ—à–µ–Ω–∞ –ø—Ä–∏ –∫–∞–∂–¥–æ–º –ø–æ–≤—Ç–æ—Ä–Ω–æ–º –ø–æ—è–≤–ª–µ–Ω–∏–∏ –±–ª–æ–∫–∞
            useDelay: 'always', // –í—Å–µ–≥–¥–∞ –∏—Å–ø–æ–ª—å–∑–æ–≤–∞—Ç—å –∑–∞–¥–µ—Ä–∂–∫—É
            viewFactor: 0.5, // –ß–∞—Å—Ç—å –±–ª–æ–∫–∞, –∫–æ—Ç–æ—Ä–∞—è –¥–æ–ª–∂–Ω–∞ –±—ã—Ç—å –≤–∏–¥–∏–º–∞, —á—Ç–æ–±—ã –∑–∞–ø—É—Å—Ç–∏—Ç—å –∞–Ω–∏–º–∞—Ü–∏—é (–æ—Ç 0 –¥–æ 1)
        });

        // –°–µ–∫—Ü–∏—è —Ç—Ä–µ—Ç—å–µ–≥–æ –±–ª–æ–∫–∞
        const thirdSection = document.querySelector('.third-section');
        
        // –ü–æ–ª—É—á–∞–µ–º –≤—Å–µ –±–ª–æ–∫–∏ —Ç—Ä–µ—Ç—å–µ–π —Å–µ–∫—Ü–∏–∏
        const thirdBlocks = document.querySelectorAll('.third-section .block');

        // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∏—Ä—É–µ–º ScrollReveal –¥–ª—è —Ç—Ä–µ—Ç—å–µ–π —Å–µ–∫—Ü–∏–∏
        ScrollReveal().reveal(thirdBlocks, {
            delay: 200, // –ó–∞–¥–µ—Ä–∂–∫–∞ –ø–µ—Ä–µ–¥ –ø–æ—è–≤–ª–µ–Ω–∏–µ–º –∫–∞–∂–¥–æ–≥–æ –±–ª–æ–∫–∞
            distance: '50px', // –†–∞—Å—Å—Ç–æ—è–Ω–∏–µ, –Ω–∞ –∫–æ—Ç–æ—Ä–æ–µ –ø—Ä–æ–∏—Å—Ö–æ–¥–∏—Ç —Å–º–µ—â–µ–Ω–∏–µ –±–ª–æ–∫–∞
            origin: 'bottom', // –ù–∞–ø—Ä–∞–≤–ª–µ–Ω–∏–µ, –∏–∑ –∫–æ—Ç–æ—Ä–æ–≥–æ –ø—Ä–æ–∏—Å—Ö–æ–¥–∏—Ç –∞–Ω–∏–º–∞—Ü–∏—è
            easing: 'cubic-bezier(0.5, 0, 0, 1)', // –§—É–Ω–∫—Ü–∏—è –∞–Ω–∏–º–∞—Ü–∏–∏
            reset: true, // –ê–Ω–∏–º–∞—Ü–∏—è –±—É–¥–µ—Ç —Å–±—Ä–æ—à–µ–Ω–∞ –ø—Ä–∏ –∫–∞–∂–¥–æ–º –ø–æ–≤—Ç–æ—Ä–Ω–æ–º –ø–æ—è–≤–ª–µ–Ω–∏–∏ –±–ª–æ–∫–∞
            useDelay: 'always', // –í—Å–µ–≥–¥–∞ –∏—Å–ø–æ–ª—å–∑–æ–≤–∞—Ç—å –∑–∞–¥–µ—Ä–∂–∫—É
            viewFactor: 0.5, // –ß–∞—Å—Ç—å –±–ª–æ–∫–∞, –∫–æ—Ç–æ—Ä–∞—è –¥–æ–ª–∂–Ω–∞ –±—ã—Ç—å –≤–∏–¥–∏–º–∞, —á—Ç–æ–±—ã –∑–∞–ø—É—Å—Ç–∏—Ç—å –∞–Ω–∏–º–∞—Ü–∏—é (–æ—Ç 0 –¥–æ 1)
        });

        const videoBlock = document.getElementById('videoBlock');
        const blockAboveVideo = document.querySelector('.block-above-video');

        // –°–∫—Ä—ã–≤–∞–µ–º –±–ª–æ–∫ —Å –≤–∏–¥–µ–æ –ø—Ä–∏ –∑–∞–≥—Ä—É–∑–∫–µ —Å—Ç—Ä–∞–Ω–∏—Ü—ã
        videoBlock.style.display = 'none';

        // –ü–æ–∫–∞–∑—ã–≤–∞–µ–º –±–ª–æ–∫ —Å –≤–∏–¥–µ–æ, –µ—Å–ª–∏ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—å –¥–æ—Å–∫—Ä–æ–ª–ª–∏–ª –¥–æ —Ç—Ä–µ—Ç—å–µ–π —Å–µ–∫—Ü–∏–∏
        window.addEventListener('scroll', function () {
            const thirdSectionTop = videoBlock.getBoundingClientRect().top;
            if (thirdSectionTop < window.innerHeight) {
                videoBlock.style.display = 'block';
                blockAboveVideo.style.display = 'none';
            }
        });
    });

    document.addEventListener('DOMContentLoaded', function () {
        const photoBlock = document.querySelector('.photo-block');
        const body = document.body;
    
        // –û–±—Ä–∞–±–æ—Ç—á–∏–∫ —Å–æ–±—ã—Ç–∏—è –ø—Ä–∏ –Ω–∞–≤–µ–¥–µ–Ω–∏–∏ –Ω–∞ –±–ª–æ–∫ —Å —Ñ–æ—Ç–æ
        photoBlock.addEventListener('mouseover', function (event) {
            // –ü—Ä–æ–≤–µ—Ä—è–µ–º, —á—Ç–æ —Å–æ–±—ã—Ç–∏–µ –ø—Ä–æ–∏–∑–æ—à–ª–æ –Ω–∞ —ç–ª–µ–º–µ–Ω—Ç–µ —Å –∫–ª–∞—Å—Å–æ–º 'photo'
            if (event.target.classList.contains('photo')) {
                // –î–æ–±–∞–≤–ª—è–µ–º –∫–ª–∞—Å—Å 'darken-page' –∫ body –¥–ª—è –∑–∞—Ç–µ–º–Ω–µ–Ω–∏—è —Å—Ç—Ä–∞–Ω–∏—Ü—ã
                body.classList.add('darken-page');
            }
        });
    
        // –û–±—Ä–∞–±–æ—Ç—á–∏–∫ —Å–æ–±—ã—Ç–∏—è –ø—Ä–∏ —É—Ö–æ–¥–µ –∫—É—Ä—Å–æ—Ä–∞ —Å –±–ª–æ–∫–∞ —Å —Ñ–æ—Ç–æ
        photoBlock.addEventListener('mouseout', function () {
            // –£–¥–∞–ª—è–µ–º –∫–ª–∞—Å—Å 'darken-page' –∏–∑ body –¥–ª—è –≤–æ—Å—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω–∏—è —Å—Ç—Ä–∞–Ω–∏—Ü—ã
            body.classList.remove('darken-page');
        });
    });    

    document.addEventListener('DOMContentLoaded', function () {
        const menuIcon = document.getElementById('menuIcon');
        const menu = document.querySelector('.menu');
        const body = document.body;
        const lightThemeIcon = document.getElementById('lightTheme');
        const darkThemeIcon = document.getElementById('darkTheme');
    
        // –û–±—Ä–∞–±–æ—Ç—á–∏–∫ —Å–æ–±—ã—Ç–∏—è –¥–ª—è –æ—Ç–æ–±—Ä–∞–∂–µ–Ω–∏—è/—Å–∫—Ä—ã—Ç–∏—è –º–µ–Ω—é
        menuIcon.addEventListener('click', () => {
            menu.classList.toggle('menu-open');
            body.classList.toggle('menu-open');
        });
    
        // –û–±—Ä–∞–±–æ—Ç—á–∏–∫ —Å–æ–±—ã—Ç–∏—è –¥–ª—è –ø–µ—Ä–µ–∫–ª—é—á–µ–Ω–∏—è —Ç–µ–º—ã
        lightThemeIcon.addEventListener('click', () => {
            body.classList.remove('dark-theme');
        });
    
        darkThemeIcon.addEventListener('click', () => {
            body.classList.add('dark-theme');
        });
    });

