    font-size: 18px;
    color: #fff;
    text-decoration: none;
}

.menu .tabs a:hover {
    background-color: #333;
}

/* –î–æ–±–∞–≤–ª–µ–Ω–Ω—ã–µ —Å—Ç–∏–ª–∏ –¥–ª—è –ø–µ—Ä–µ–∫–ª—é—á–µ–Ω–∏—è —Ç–µ–º—ã */
.theme-switcher {
    margin-top: 20px;
}

.theme-icon {
    width: 30px;
    height: 30px;
    margin: 0 10px;
    cursor: pointer;
}

/* –î–æ–±–∞–≤–ª–µ–Ω–Ω—ã–µ —Å—Ç–∏–ª–∏ –¥–ª—è –∑–∞—Ç–µ–º–Ω–µ–Ω–∏—è —Å–∞–π—Ç–∞ –ø—Ä–∏ –æ—Ç–æ–±—Ä–∞–∂–µ–Ω–∏–∏ –º–µ–Ω—é */
body.menu-open {
    overflow: hidden;
}

body.menu-open .menu {
    display: block;
